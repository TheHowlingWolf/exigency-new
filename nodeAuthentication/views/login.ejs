<section id="registration" class="py-3 my-5">
        <div class="container text-center py-2">
            <h3>Login Here</h3>
            <p class="lead">Fill Out The Details</p>
            <div class="row align-self-center justify-content-center w-100">
                <div class="col-lg-3 "></div>
                <div class="col-lg-6 align-self-center">
                    <form action="/users/login" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                                <div class="input-group input-group-lg">
                                    <div class="container">
                                        <div class="row w-100 m-0">
                                            <div class="col-2 w-100">
                                                    <span class="input-group-addon"><i class="far fa-id-badge fa-2x pt-2"></i></span>
                                            </div>
                                            <div class="col-10 w-100 px-1">
                                                <input name="username" type="text" class="form-control rounded" placeholder="Username">
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                                <div class="input-group input-group-lg">
                                    <div class="container">
                                        <div class="row w-100 m-0">
                                            <div class="col-2 w-100">
                                                    <span class="input-group-addon"><i class="fas fa-lock fa-2x pt-2"></i></span>
                                            </div>
                                            <div class="col-10 w-100 px-1">
                                                <input name="password" type="password" class="form-control rounded" placeholder="Password">
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-block btn-rounded bg-warning">
                    </form>
                </div>
                <div class="col-lg-3"></div>
                </div>
            </div>
        </div>
    </section>